# Variables
set $wallpaper ~/Downloads/bg.jpg

set $t #00000000

# Font
font pango:Unifont 12

# Gaps
default_border pixel 6

#						border background text indicator child borders			
client.focused		    $t     $t         $t   $t        $t
client.unfocused        $t     $t         $t   $t        $t
client.focused_inactive $t     $t         $t   $t        $t	

# Keyboard Layout
input "type:keyboard" {
	xkb_layout se
	}

# Wallpaper
output * bg $wallpaper fill

# Status Bar
bar {
    position top

    colors {
		statusline $t
		background #282828E4
    	inactive_workspace #323232E4 #323232E4 $t 
    	focused_workspace #282828E4 #282828E4 $t
    }

    status_command while ~/.config/sway/swaybar.sh; do sleep 1; done
}

include keybinds.sh
